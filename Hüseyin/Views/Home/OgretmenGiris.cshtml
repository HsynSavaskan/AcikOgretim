@{
    ViewData["Title"] = "Öğretmen Girişi";
}
@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Hata</div>
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #e3f2fd;
            color: #0d47a1;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-box {
            background-color: #ffffff;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            max-width: 500px;
            margin: 80px auto;
        }

        h2 {
            text-align: center;
            color: #1565c0;
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #1976d2;
            border: none;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #1565c0;
            }

        label {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="mt-4 text-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            ⬅️ Geri Dön
        </a>
    </div>
    <div class="container">
        <div class="login-box">
            <h2>Öğretmen Girişi</h2>
            <form asp-controller="Home" asp-action="OgretmenGiris" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="Email" required />
                </div>
                <div class="mb-3">
                    <label for="sifre" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="sifre" name="Sifre" required />
                </div>
                <div class="text-center mb-3">
                    <a href="/Home/OgrenciGiris" class="text-decoration-none fw-bold text-primary">👨‍🏫 Ogrenci Girişi Yap</a>
                </div>
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>
        </div>
    </div>

</body>
</html>
